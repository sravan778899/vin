pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/sravan778899/vin.git'  // Replace with your repo
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("art-factory")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    // Stop and remove any existing container
                    sh 'docker rm -f art-factory-container || true'

                    // Run new container
                    sh 'docker run -d --name art-factory-container -p 8080:80 art-factory'
                }
            }
        }
    }

    post {
        success {
            echo '✅ Art Factory site deployed successfully!'
        }
        failure {
            echo '❌ Deployment failed.'
        }
    }
}
